@model Mission7.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this movie?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Director</dt>
        <dd class="col-sm-9">@Model.Director</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>

        <dt class="col-sm-3">Edited</dt>
        <dd class="col-sm-9">@(Model.Edited == 1 ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Lent To</dt>
        <dd class="col-sm-9">@Model.LentTo</dd>

        <dt class="col-sm-3">Copied to Plex</dt>
        <dd class="col-sm-9">@(Model.CopiedToPlex == 1 ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>