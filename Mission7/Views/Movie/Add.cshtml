@model Mission7.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add Movie to Collection</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Select Category --</option>
                    <option value="1">Drama</option>
                    <option value="2">Comedy</option>
                    <option value="3">Horror/Suspense</option>
                    <option value="4">Miscellaneous</option>
                    <option value="5">Television</option>
                    <option value="6">VHS</option>
                    <option value="7">Family</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="control-label">Year</label>
                <input asp-for="Year" class="form-control" type="number" min="1888" required />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Director" class="control-label">Director</label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label">Rating</label>
                <select asp-for="Rating" class="form-select">
                    <option value="">-- Select Rating --</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NR">NR</option>
                    <option value="UR">UR</option>
                    <option value="TV-14">TV-14</option>
                    <option value="TV-PG">TV-PG</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input id="EditedCheckbox" type="checkbox" class="form-check-input"
                       @(Model?.Edited == 1 ? "checked" : "")
                       onchange="document.getElementById('Edited').value = this.checked ? '1' : '0';" />
                <input type="hidden" id="Edited" name="Edited" value="@(Model?.Edited ?? 0)" />
                <label for="EditedCheckbox" class="form-check-label">Edited</label>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LentTo" class="control-label">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
                <span asp-validation-for="LentTo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input id="CopiedToPlexCheckbox" type="checkbox" class="form-check-input"
                       @(Model?.CopiedToPlex == 1 ? "checked" : "")
                       onchange="document.getElementById('CopiedToPlex').value = this.checked ? '1' : '0';" />
                <input type="hidden" id="CopiedToPlex" name="CopiedToPlex" value="@(Model?.CopiedToPlex ?? 0)" />
                <label for="CopiedToPlexCheckbox" class="form-check-label">Copied to Plex</label>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notes (25 characters max)</label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Add to Collection" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>