@model Mission7.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h1>Edit Movie</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Select Category --</option>
                    <option value="1">Drama</option>
                    <option value="2">Comedy</option>
                    <option value="3">Horror/Suspense</option>
                    <option value="4">Miscellaneous</option>
                    <option value="5">Television</option>
                    <option value="6">VHS</option>
                    <option value="7">Family</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="control-label">Year</label>
                <input asp-for="Year" class="form-control" type="number" min="1888" required />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Director" class="control-label">Director</label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label">Rating</label>
                <select asp-for="Rating" class="form-select">
                    <option value="">-- Select Rating --</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NR">NR</option>
                    <option value="UR">UR</option>
                    <option value="TV-14">TV-14</option>
                    <option value="TV-PG">TV-PG</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input asp-for="Edited" class="form-check-input" type="checkbox" />
                <label asp-for="Edited" class="form-check-label">Edited</label>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LentTo" class="control-label">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
                <span asp-validation-for="LentTo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" required />
                <label asp-for="CopiedToPlex" class="form-check-label">Copied to Plex</label>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notes (25 characters max)</label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}