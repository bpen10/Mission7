@model IEnumerable<Mission7.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Joel's Movie Collection</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Movie</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>On Plex</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Year</td>
                    <td>@item.Director</td>
                    <td>@item.Rating</td>
                    <td>@(item.Edited == 1 ? "Yes" : "No")</td>
                    <td>@item.LentTo</td>
                    <td>@(item.CopiedToPlex == 1 ? "Yes" : "No")</td>
                    <td>@item.Notes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>